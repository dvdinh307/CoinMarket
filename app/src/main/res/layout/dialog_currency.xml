<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/value_350dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_action_bar"
        android:layout_width="@dimen/value_350dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/value_10dp"
            android:text="Switch Currency"
            android:textAllCaps="true"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/imv_close"
            android:layout_width="@dimen/value_35dp"
            android:layout_height="@dimen/value_35dp"
            android:src="@mipmap/ic_close" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/rl_action_bar" />

    <ListView
        android:id="@+id/lv_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line" />
</android.support.constraint.ConstraintLayout>