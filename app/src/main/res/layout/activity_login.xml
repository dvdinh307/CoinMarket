<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_gradient">

    <RelativeLayout
        android:id="@+id/btn_facebook"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_52dp"
        android:layout_marginEnd="@dimen/value_20dp"
        android:layout_marginStart="@dimen/value_20dp"
        android:layout_marginTop="@dimen/value_18dp"
        android:background="@drawable/bg_facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imv_facebook"
            android:layout_width="@dimen/value_47dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_fb_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/value_10dp"
            android:layout_toEndOf="@id/imv_facebook"
            android:text="@string/facebook_btn_login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_google"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_52dp"
        android:layout_marginBottom="@dimen/value_30dp"
        android:layout_marginEnd="@dimen/value_20dp"
        android:layout_marginStart="@dimen/value_20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_google"
        app:layout_constraintTop_toBottomOf="@id/btn_facebook">

        <ImageView
            android:id="@+id/imv_google"
            android:layout_width="@dimen/value_47dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_google_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/value_10dp"
            android:layout_toEndOf="@id/imv_google"
            android:text="@string/google_btn_login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imv_logi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/value_20dp"
        android:src="@mipmap/ic_logo"
        app:layout_constraintBottom_toTopOf="@id/btn_facebook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>